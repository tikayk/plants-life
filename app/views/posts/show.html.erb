<div class='post-show'>
  <div class="post-show__image" style="background-image: url(<%= @post.image %>);">  
    <div class="details">
      <div class="date">
        <span class="day"><%= @post.created_at.strftime("%Y/%m/%d") %></span>
      </div>
      <% if user_signed_in? && current_user.id == @post.user_id %>
        <ul class="meta">
          <li><%= link_to "削除", "/posts/#{@post.id}", method: :delete %></li>
          <li><%= link_to '編集', "/posts/#{@post.id}/edit", method: :get %></li>
        </ul>
      <% end %>
    </div>
    <div class="description">
      <div class="content">
        <span class="author"><%= @post.user.name %></span>
        <div class="text"><%= @post.text %></div>
        <a href="#" class="button">Read more</a>
      </div>
    </div>
  </div>
</div>




