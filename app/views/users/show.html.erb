
<div class="mypage">
  <div class="mypage-top">
    <%= image_tag @user.image, class: "mypage-top__image" %>
    <%# <div class="mypage-top__image"><%= @user.image %>
    <div class="mypage-top__name"><%= @user.name %></div>
  </div>

  <div class="mypage-post">
    <% @posts.each do |post| %>
      <%= render partial: "posts/post", locals: { post: post } %>
    <% end %>
  </div>
</div>