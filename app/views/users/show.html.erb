
<div class="mypage">
  <div class="mypage-top">
    <%= image_tag @user.image, class: "mypage-top__image" %>
    <div class="mypage-top__name"><%= @user.name %>
    </div>
  </div>

  <div class="btn">
    <%= link_to '投稿する', new_post_path, class: "new-btn"%>
    <%= link_to '編集する', edit_user_path, class: "search-btn"%>　
  </div>

  <div class="mypage-post">
    <% @posts.each do |post| %>

      <div class="cp_card05" style="background-image: url(<%= post.image %>);">
        <div class="details">
          <div class="date">
            <span class="day"><%= post.created_at.strftime("%Y/%m/%d") %></span>
          </div>
        </div>
        <div class="description">
          <div class="content">
            <div class="text"><%= simple_format(post.text) %></div>
            <%= link_to "/posts/#{post.id}" do %>
              <span class="fas fa-angle-right button">Read more</span>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>